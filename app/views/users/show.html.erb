<!--Intro and service-->
<div id="about" class="section scrollspy">
  <br>
    <div class="container">
        <div class="row">
          <div class="row">
            <div  class="col s12">
                <h4 class="header hPad text_h2_zero"> <span class="span_h2">Welcome Back <%= @user.first_name %>!</span></h4>
            </div>


            </div>
            <div class="row">
              <div class="col s12 m6 l6">
                <div  class="col s12 m12 l12">
                  <h5 class="header text_h2_zero"><span class="span_h2">Here are your current posts:</span></h5>
                    <div class="promo promo-example">

                      <% @post = Post.new %>
                      <%= render 'posts/form' %>
                      <br>
                      <% @users.posts.reverse.each do |post| %>
                        <li class="postList"><h6 class="promo-caption"><%= post.post %></h6></li>
                      <% end %>

                    </div>
                </div>
              </div>

              <div class="col s12 m6 l6">
                <h5 class="header text_h2_zero"><span class="span_h2">Here are your relevent posts:</span></h5>
                <div class="promo promo-example">

                  <form>
                    <input type="text" class="user_search_bar" placeholder="Search for something"/>
                    <button class="btn waves-effect waves-light makeBlue user_search_btn_right" type="submit" name="commit" value="Submit Form Data">
                      <i class="fa fa-search btnsze"></i>
                    </button>
                  </form>

                  <br>

                    <h5 class="promo-caption">|</h5>
                    <p class="light">|</p>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>


