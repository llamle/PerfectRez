<!DOCTYPE html>
<html>
<head>
  <title>PerfectRez</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:message] %>
  <div class="message" style="background: lightpink;">
    <%= flash[:message] %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
